{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "es6"],                      /* Specifies the libraries to include for type checking and runtime */
    "target": "es6",                                            /* Sets the ECMAScript version for emitted JavaScript */
    "allowJs": true,                                            /* Enables TypeScript to compile JavaScript files alongside TypeScript files */
    "esModuleInterop": true,                                    /* Enables interoperability with CommonJS modules */
    "noUnusedLocals": true,                                     /* Raises an error for unused local variables */
    "noUnusedParameters": true,                                 /* Raises an error for unused function parameters */
    "forceConsistentCasingInFileNames": true,                    /* Enforces consistent casing in file names */
    "strict": true,                                             /* Enables all strict type-checking options */
    "skipLibCheck": true,                                       /* Skips type checking all declaration files */
    "jsx": "react",                                             /* Specifies the JSX factory function for React */
    "noFallthroughCasesInSwitch": true,                         /* Raises an error for fallthrough cases in switch statements */
    "declaration": true,                                        /* Generates corresponding .d.ts declaration files */
    "declarationDir": "types",                                  /* Specify the output directory for generated declaration files */
    "sourceMap": true,                                          /* Generates source map files */
    "moduleResolution": "node",                                 /* Sets the module resolution strategy */
    "allowSyntheticDefaultImports": true                        /* Allows importing modules that don't have default exports */,
    "experimentalDecorators": true,                             /* Enables support for experimental decorators */
    "emitDecoratorMetadata": true                               /* Enables emitting decorator metadata for runtime use */
  },
  "exclude": ["dist", "node_modules"],                          /* Specifies the directories to exclude from compilation */
  "include": ["src"]                                            /* Specifies the directories and files to include for compilation */
}